<div class="card-header bg-transparent">
  <div class="navbar navbar-expand p-0">
    <h3 class="fw-bold mb-0" style="overflow: hidden;"><%=@receiver.displayname%></h3>
  </div>
</div>
<div class="card-body p-4" style="height: 500px; overflow: auto;">
  <% if @messages %>
    <% @messages.each do |message| %>
      <% if message.receiverid != @receiver.userid %>
        <div class="d-flex align-items-baseline mb-4">
          <div class="pe-2">
            <div>
              <div class="card card-text d-flex flex-column p-2 px-3 m-1" style="max-width: 300px">
                <img src="<%=message.image_url%>" alt="">
                <p><%=message.content%></p>
              </div>
            </div>
            <div>
              <div class="small"><%=message.timestamp%></div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="d-flex align-items-baseline text-end justify-content-end mb-4">
          <div class="pe-2">
            <div>
              <div class="card card-text d-flex flex-column mb-3 p-2 px-3 m-1 border-primary" style="max-width: 300px">
                <img src="<%=message.image_url%>" alt="">
                <p><%=message.content%></p>
                </div>
            </div>
            <div>
              <div class="small"><%=message.timestamp%></div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
<div class="card-footer bg-white position-absolutebottom-0 m-0 p-1">
  <form action="/messages/:userid" method="post" enctype="multipart/form-data">
    <div class="input-group">
      <div class="input-group-text bg-transparent border-0">
        <label class="btn btn-light text-secondary">
          <input type="file" accept=".png" name="file"/>
        </label>
      </div>
      <input type="text" class="form-control border-0" placeholder="Write a message..." name="content">
      <input type="hidden" name="receiverid" value="<%=@receiver.userid%>">
      <div class="input-group-text bg-transparent border-0">
        <label class="btn btn-light text-secondary fas fa-lock">
          <input type="checkbox" value="benar" id="lockCheckbox" name="reverse">
        </label>
      </div>
      <div class="input-group-text bg-transparent border-0">
        <button class="btn btn-light text-secondary" type="submit">
          <i class="fas fa-paper-plane"></i>
        </button>
      </div>
    </div>
  </form>
</div>
